<div
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<tal:block
		 tal:define="
		 prediction nocall:here;
		 state python:here.portal_workflow.getInfoFor(prediction, 'review_state');
		 state_title python:here.portal_workflow.getTitleForStateOnType(state,here.getPortalTypeName());">
	<img width="16" height="16" 
		 tal:attributes="src string:++resource++plone4bio.images/icon_${state}.png"
		 alt="prediction icon" />
    <span>State:</span>
    <span tal:attributes="id string:state_${prediction/getId};
	         title state_title"
	         tal:content="state_title" />
</tal:block>


